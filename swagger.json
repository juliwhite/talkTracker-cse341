{
    "openapi": "3.0.0",
    "info": {
      "title": "Talk Tracker API",
      "description": "API for managing children talks in Primary.",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "https://talktracker.onrender.com",
        "description": "Production server"
      }
    ],
    "components": {
    "securitySchemes": {
      "OAuth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://accounts.google.com/o/oauth2/auth",
            "tokenUrl": "https://oauth2.googleapis.com/token",
            "scopes": {
              "openid": "Access your TalkTracker account",
              "profile": "View your basic profile information",
              "email": "View your email address"
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "OAuth2": ["openid", "profile", "email"]
    }
  ],
    "paths": {
      "/children": {
        "get": {
          "summary": "Get all children",
          "security": [
          {
            "OAuth2": ["openid", "profile", "email"]
          }
        ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        },
        "post": {
          "summary": "Create a new child",
          "security": [
            {
             "OAuth2": ["openid", "profile", "email"]
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "firstName": {
                      "type": "string",
                      "example": "Ana"
                    },
                    "lastName": {
                      "type": "string",
                      "example": "Smith"
                    },
                    "birthday": {
                      "type": "string",
                      "format": "date",
                      "example": "2015-05-05"
                    },
                    "class": {
                      "type": "string",
                      "example": "Sunbeam"
                    },
                    "favoriteTreat": {
                      "type": "string",
                      "example": "chocolate"
                    },
                    "talksGiven": {
                      "type": "integer",
                      "example": 4
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Created"
            },
            "400": {
              "description": "Bad Request"
            }
          }
        }
      },
      "/children/{id}": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "get": {
          "summary": "Get child by ID",
          "security": [
            {
              "OAuth2": ["openid", "profile", "email"]
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "404": {
              "description": "Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        },
        "put": {
          "summary": "Update child by ID",
          "security": [
            {
              "OAuth2": ["openid", "profile", "email"]
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "firstName": {
                      "type": "string",
                      "example": "Ana"
                    },
                    "lastName": {
                      "type": "string",
                      "example": "Smith"
                    },
                    "birthday": {
                      "type": "string",
                      "format": "date",
                      "example": "2015-05-05"
                    },
                    "class": {
                      "type": "string",
                      "example": "Sunbeam"
                    },
                    "favoriteTreat": {
                      "type": "string",
                      "example": "chocolate"
                    },
                    "talksGiven": {
                      "type": "integer",
                      "example": 5
                    }
                  },
                  "required": ["firstName", "lastName", "birthday"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Child updated successfully"
            },
            "404": {
              "description": "Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        },
        "delete": {
          "summary": "Delete child by ID",
          "security": [
            {
              "OAuth2": ["openid", "profile", "email"]
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "404": {
              "description": "Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      }
    }
  }































